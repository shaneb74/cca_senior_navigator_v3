{
  "key": "va_benefits",
  "title": "VA Benefits",
  "icon": "üéñÔ∏è",
  "description": "VA Disability and Aid & Attendance benefits for {NAME}",
  "estimated_time": "3-5 min",
  "required": false,
  "sort_order": 3,
  "visible_if": {
    "flag": "is_veteran",
    "equals": true
  },
  "sections": [
    {
      "id": "intro",
      "type": "intro",
      "title": "{NAME_POS} VA Benefits Assessment",
      "icon": "üéñÔ∏è",
      "help_text": "Review {NAME_POS} VA disability and Aid & Attendance benefits. We'll calculate current rates and eligibility based on veteran status, income, and care needs.",
      "fields": [],
      "info_boxes": [
        {
          "type": "info",
          "message": "üí° VA benefits can significantly offset care costs. We'll help you understand what you may qualify for based on 2025 benefit rates."
        }
      ]
    },
    {
      "id": "va_disability",
      "title": "VA Disability Compensation",
      "icon": "üèÖ",
      "help_text": "Service-connected disability benefits",
      "layout": "single_column",
      "fields": [
        {
          "key": "has_va_disability",
          "label": "Do you receive VA Disability Compensation?",
          "type": "select",
          "required": false,
          "options": [
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "applied",
              "label": "Application pending"
            },
            {
              "value": "considering",
              "label": "Considering applying"
            }
          ],
          "default": "no",
          "help": "VA Disability Compensation provides monthly payments for service-connected disabilities."
        },
        {
          "key": "va_disability_rating",
          "label": "Disability Rating Percentage",
          "type": "select",
          "required": false,
          "options": [
            {
              "value": 0,
              "label": "0%"
            },
            {
              "value": 10,
              "label": "10%"
            },
            {
              "value": 20,
              "label": "20%"
            },
            {
              "value": 30,
              "label": "30%"
            },
            {
              "value": 40,
              "label": "40%"
            },
            {
              "value": 50,
              "label": "50%"
            },
            {
              "value": 60,
              "label": "60%"
            },
            {
              "value": 70,
              "label": "70%"
            },
            {
              "value": 80,
              "label": "80%"
            },
            {
              "value": 90,
              "label": "90%"
            },
            {
              "value": 100,
              "label": "100%"
            }
          ],
          "default": 0,
          "help": "Your combined disability rating from the VA. This determines your monthly compensation amount.",
          "visible_if": {
            "field": "has_va_disability",
            "in": [
              "yes",
              "applied"
            ]
          }
        },
        {
          "key": "va_dependents",
          "label": "Dependents Status",
          "type": "select",
          "required": false,
          "options": [
            {
              "value": "none",
              "label": "Veteran only (no dependents)"
            },
            {
              "value": "spouse",
              "label": "Veteran with spouse"
            },
            {
              "value": "spouse_one_child",
              "label": "Veteran with spouse and one child"
            },
            {
              "value": "spouse_multiple_children",
              "label": "Veteran with spouse and 2+ children"
            },
            {
              "value": "children_only",
              "label": "Veteran with child(ren) only"
            }
          ],
          "default": "none",
          "help": "Dependents increase your monthly compensation. Select the option that matches your family situation.",
          "visible_if": {
            "field": "has_va_disability",
            "in": [
              "yes",
              "applied"
            ]
          }
        },
        {
          "key": "va_disability_monthly",
          "label": "Monthly VA Disability Payment",
          "type": "display_currency",
          "required": false,
          "default": 0,
          "help": "This amount is automatically calculated based on your disability rating and dependents using 2025 official VA rates.",
          "visible_if": {
            "field": "has_va_disability",
            "equals": "yes"
          }
        },
        {
          "key": "va_disability_notes",
          "label": "VA Disability Notes (Optional)",
          "type": "textarea",
          "required": false,
          "help": "Any additional context: pending increases, appeals, combined ratings from multiple conditions.",
          "visible_if": {
            "field": "has_va_disability",
            "in": [
              "yes",
              "applied"
            ]
          }
        }
      ],
      "info_boxes": [
        {
          "type": "info",
          "message": "üí° 2025 VA Disability Rates auto-populate based on your rating and dependents. Veteran only: 10%=$175.51, 20%=$346.95, 30%=$537.42, 50%=$1,102.04, 70%=$1,758.95, 100%=$3,831.73. With spouse: 30%=$601.42, 50%=$1,208.04, 70%=$1,908.95, 100%=$4,057.73. Source: VA.gov effective Dec 1, 2024."
        }
      ]
    },
    {
      "id": "aid_attendance",
      "title": "VA Aid & Attendance (A&A)",
      "icon": "ü§ù",
      "help_text": "Additional benefit for veterans needing assistance with daily activities",
      "layout": "single_column",
      "fields": [
        {
          "key": "has_aid_attendance",
          "label": "Do you receive VA Aid & Attendance benefits?",
          "type": "select",
          "required": false,
          "options": [
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "yes",
              "label": "Yes"
            },
            {
              "value": "applied",
              "label": "Application pending"
            },
            {
              "value": "considering",
              "label": "Considering applying"
            }
          ],
          "default": "no",
          "help": "A&A provides additional monthly payments for veterans who need help with daily living activities or are in nursing homes."
        },
        {
          "key": "aid_attendance_monthly",
          "label": "Monthly Aid & Attendance Payment",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 5000,
          "step": 10,
          "default": 0,
          "help": "Enter your current monthly A&A payment if you're receiving it.",
          "visible_if": {
            "field": "has_aid_attendance",
            "equals": "yes"
          }
        },
        {
          "key": "aanda_household_status",
          "label": "Household Status for A&A",
          "type": "select",
          "required": false,
          "options": [
            {
              "value": "veteran_only",
              "label": "Veteran only"
            },
            {
              "value": "veteran_spouse",
              "label": "Veteran with spouse"
            },
            {
              "value": "surviving_spouse",
              "label": "Surviving spouse"
            }
          ],
          "default": "veteran_only",
          "help": "A&A benefit amounts vary based on household status and marital status.",
          "visible_if": {
            "field": "has_aid_attendance",
            "in": [
              "yes",
              "applied",
              "considering"
            ]
          }
        },
        {
          "key": "aanda_eligibility_notes",
          "label": "A&A Eligibility Notes",
          "type": "textarea",
          "required": false,
          "help": "A&A eligibility requires wartime service, income below limits (MAPR), and need for regular assistance with 2+ ADLs or being bedridden. Add any relevant details about your situation.",
          "visible_if": {
            "field": "has_aid_attendance",
            "in": [
              "yes",
              "applied",
              "considering"
            ]
          }
        }
      ],
      "info_boxes": [
        {
          "type": "info",
          "message": "üí° 2025 A&A Maximum Annual Pension Rates (MAPR): Veteran alone = $27,549/year ($2,296/mo), Veteran with spouse = $32,446/year ($2,704/mo), Surviving spouse = $17,724/year ($1,477/mo). Actual benefit = MAPR minus countable income."
        },
        {
          "type": "info",
          "message": "‚ö†Ô∏è A&A Eligibility Requirements: (1) Wartime veteran, (2) Need regular assistance with 2+ ADLs or be bedridden/in nursing home, (3) Income below MAPR limits, (4) Net worth under $155,356 (2025 limit)."
        }
      ]
    },
    {
      "id": "results",
      "type": "results",
      "title": "VA Benefits Summary",
      "icon": "‚úÖ",
      "fields": []
    }
  ],
  "summary": {
    "type": "calculated",
    "label": "Total Monthly VA Benefits",
    "formula": "sum(va_disability_monthly, aid_attendance_monthly)",
    "display_format": "${:,.0f}/month"
  },
  "output_contract": {
    "has_va_disability": "string",
    "va_disability_rating": "number",
    "va_dependents": "string",
    "va_disability_monthly": "number",
    "va_disability_notes": "string",
    "has_aid_attendance": "string",
    "aid_attendance_monthly": "number",
    "aanda_household_status": "string",
    "aanda_eligibility_notes": "string"
  }
}