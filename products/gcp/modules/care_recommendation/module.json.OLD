{
  "module": {
    "id": "care_recommendation",
    "name": "Guided Care Plan",
    "version": "v1",
    "display": {
      "title": "Find the Right Senior Care",
      "subtitle": "We'll match you to the best living options based on daily needs, safety, cognition, and more.",
      "estimated_time": "≈2 min",
      "autosave": true,
      "progress_weight": 1.0
    }
  },

  "sections": [
    {
      "id": "about_you",
      "title": "About You",
      "questions": [
        {
          "id": "age_range",
          "type": "string",
          "select": "single",
          "label": "What is this person's age range?",
          "required": true,
          "options": [
            {"label": "Under 65", "value": "u65"},
            {"label": "65–74", "value": "65_74"},
            {"label": "75–84", "value": "75_84"},
            {"label": "85+", "value": "85_plus"}
          ],
          "ui": {"widget": "chip", "orientation": "horizontal"}
        },
        {
          "id": "living_situation",
          "type": "string",
          "select": "single",
          "label": "Current living situation?",
          "required": true,
          "options": [
            {"label": "Alone", "value": "alone"},
            {"label": "With family", "value": "family"},
            {"label": "Assisted living", "value": "assisted"},
            {"label": "Other", "value": "other"}
          ],
          "ui": {"widget": "chip", "orientation": "horizontal"}
        },
        {
          "id": "isolation",
          "type": "string",
          "select": "single",
          "label": "Is the home far from family/providers/services?",
          "required": true,
          "options": [
            {"label":"No – easily accessible","value":"easy","score":0},
            {"label":"Somewhat isolated","value":"somewhat","score":1},
            {"label":"Very isolated","value":"very","score":2,"flags":["geo_isolated"]}
          ],
          "ui": {"widget":"chip","orientation":"horizontal"},
          "weight": 1
        }
      ]
    },

    {
      "id": "medication_mobility",
      "title": "Medication & Mobility",
      "questions": [
        {
          "id": "meds_complexity",
          "type": "string",
          "select": "single",
          "label": "Medication complexity",
          "required": true,
          "options": [
            {"label":"None","value":"none","score":0},
            {"label":"Simple","value":"simple","score":1},
            {"label":"Moderate","value":"moderate","score":2},
            {"label":"Complex/caregiver-managed","value":"complex","score":3}
          ],
          "ui": {"widget":"chip","orientation":"vertical"},
          "weight": 2
        },
        {
          "id": "mobility",
          "type": "string",
          "select": "single",
          "label": "Mobility level",
          "required": true,
          "options": [
            {"label":"Independent","value":"independent","score":0},
            {"label":"Walker","value":"walker","score":1},
            {"label":"Wheelchair","value":"wheelchair","score":2},
            {"label":"Bed-bound","value":"bedbound","score":3}
          ],
          "ui": {"widget":"chip","orientation":"vertical"},
          "weight": 2
        },
        {
          "id": "falls",
          "type": "string",
          "select": "single",
          "label": "Fall history?",
          "required": true,
          "options": [
            {"label":"No falls (past 6 months)","value":"none","score":0},
            {"label":"One fall","value":"one","score":1,"flags":["fall_recent"]},
            {"label":"Multiple falls","value":"multiple","score":3,"flags":["falls_multiple"]}
          ],
          "ui": {"widget":"chip","orientation":"horizontal"},
          "weight": 2
        },
        {
          "id": "chronic_conditions",
          "type": "string",
          "select": "multi",
          "label": "Chronic conditions (select all that apply)",
          "options": [
            {"label":"Diabetes","value":"diabetes","score":1,"flags":["chronic_present"]},
            {"label":"CHF","value":"chf","score":1,"flags":["chronic_present"]},
            {"label":"COPD","value":"copd","score":1,"flags":["chronic_present"]},
            {"label":"Hypertension","value":"htn","score":1,"flags":["chronic_present"]},
            {"label":"Arthritis","value":"arthritis","score":1,"flags":["chronic_present"]},
            {"label":"Parkinson's","value":"parkinsons","score":1,"flags":["chronic_present"]},
            {"label":"Cancer","value":"cancer","score":1,"flags":["chronic_present"]},
            {"label":"Other","value":"other","score":1,"flags":["chronic_present"]}
          ],
          "ui": {"widget":"multi_chip","allow_custom": true, "placeholder":"Select or add conditions", "orientation":"vertical"},
          "weight": 2,
          "score_cap": 3
        }
      ]
    },

    {
      "id": "daily_living",
      "title": "Daily Living",
      "questions": [
        {
          "id": "help_overall",
          "type": "string",
          "select": "single",
          "label": "How much help is needed overall?",
          "required": true,
          "options": [
            {"label":"None – fully independent","value":"independent","score":0},
            {"label":"Occasional – some help","value":"some_help","score":0},
            {"label":"Regular – daily assistance","value":"daily_help","score":0,"flags":["high_dependence"]},
            {"label":"Extensive – full-time support","value":"full_support","score":0,"flags":["high_dependence"]}
          ],
          "ui": {"widget":"chip","orientation":"vertical"}
        },
        {
          "id": "badls",
          "type": "string",
          "select": "multi",
          "label": "Help needed with basic ADLs (select all that apply)",
          "options": [
            {"label":"Bathing","value":"bathing","score":1},
            {"label":"Dressing","value":"dressing","score":1},
            {"label":"Eating","value":"eating","score":1},
            {"label":"Toileting","value":"toileting","score":1},
            {"label":"Transferring","value":"transferring","score":1}
          ],
          "ui": {"widget":"multi_chip","allow_custom": false, "orientation":"vertical"},
          "weight": 3,
          "score_cap": 3
        },
        {
          "id": "iadls",
          "type": "string",
          "select": "multi",
          "label": "Help needed with daily tasks (select all that apply)",
          "options": [
            {"label":"Meal prep","value":"meal_prep","score":1},
            {"label":"Housekeeping","value":"housekeeping","score":1},
            {"label":"Finances","value":"finances","score":1},
            {"label":"Medication management","value":"med_mgmt","score":1},
            {"label":"Transportation","value":"transportation","score":1}
          ],
          "ui": {"widget":"multi_chip","allow_custom": false, "orientation":"vertical"},
          "weight": 2,
          "score_cap": 3
        },
        {
          "id": "hours_per_day",
          "type": "string",
          "select": "single",
          "label": "Hours of assistance per day",
          "required": true,
          "options": [
            {"label":"Less than 1 hour","value":"lt1h","score":0,"flags":["support_none"]},
            {"label":"1–3 hours","value":"1_3h","score":1},
            {"label":"4–8 hours","value":"4_8h","score":2},
            {"label":"24-hour support","value":"24h","score":3,"flags":["support_strong"]}
          ],
          "ui": {"widget":"chip","orientation":"vertical"},
          "weight": 2
        },
        {
          "id": "primary_support",
          "type": "string",
          "select": "single",
          "label": "Primary support right now",
          "required": true,
          "options": [
            {"label":"Family/friends","value":"family","score":1,"flags":["informal_support"]},
            {"label":"Paid caregiver","value":"paid","score":2,"flags":["formal_support"]},
            {"label":"Community/agency","value":"community","score":2,"flags":["formal_support"]},
            {"label":"No regular support","value":"none","score":3,"flags":["no_support"]}
          ],
          "ui": {"widget":"chip","orientation":"horizontal"},
          "weight": 2
        }
      ]
    },

    {
      "id": "cognition_mental_health",
      "title": "Cognition & Mental Health",
      "questions": [
        {
          "id": "memory_changes",
          "type": "string",
          "select": "single",
          "label": "Cognitive health or memory changes",
          "required": true,
          "options": [
            {"label":"No concerns","value":"none","score":0},
            {"label":"Occasional forgetfulness","value":"occasional","score":1},
            {"label":"Moderate memory change","value":"moderate","score":2,"flags":["cog_moderate"]},
            {"label":"Severe memory issues / dementia","value":"severe","score":3,"flags":["cog_severe"]}
          ],
          "ui": {"widget":"chip","orientation":"vertical"},
          "weight": 3
        },
        {
          "id": "behaviors",
          "type": "string",
          "select": "multi",
          "label": "Behavioral concerns (select all that apply)",
          "options": [
            {"label":"Wandering","value":"wandering","score":1,"flags":["behavior_risk"]},
            {"label":"Aggression","value":"aggression","score":1,"flags":["behavior_risk"]},
            {"label":"Confusion/disorientation","value":"confusion","score":1,"flags":["behavior_risk"]}
          ],
          "ui": {"widget":"multi_chip","allow_custom": true, "placeholder": "Select or add behaviors", "orientation":"vertical"},
          "weight": 3,
          "score_cap": 3,
          "visible_if": { "in": ["memory_changes", ["moderate","severe"]] }
        },
        {
          "id": "mood",
          "type": "string",
          "select": "single",
          "label": "Overall mood these days",
          "required": true,
          "options": [
            {"label":"Great","value":"great","score":0},
            {"label":"Mostly good","value":"mostly_good","score":1},
            {"label":"Okay","value":"okay","score":1},
            {"label":"Low","value":"low","score":2,"flags":["emo_concern"]}
          ],
          "ui": {"widget":"chip","orientation":"vertical"},
          "weight": 1
        }
      ]
    }
  ],

  "logic": {
    "aggregate_method": "weighted_sum",
    "scored_inputs": [
      {"id":"badls","domain":"ADL/IADL Burden","weight":3,"score_cap":3},
      {"id":"iadls","domain":"ADL/IADL Burden","weight":2,"score_cap":3},
      {"id":"hours_per_day","domain":"Support Network","weight":2},
      {"id":"primary_support","domain":"Support Network","weight":2},
      {"id":"memory_changes","domain":"Cognitive Function","weight":3},
      {"id":"behaviors","domain":"Cognitive Function","weight":3,"score_cap":3},
      {"id":"meds_complexity","domain":"Medication Complexity","weight":2},
      {"id":"mobility","domain":"Mobility & Falls","weight":2},
      {"id":"falls","domain":"Mobility & Falls","weight":2},
      {"id":"chronic_conditions","domain":"Health & Chronic","weight":2,"score_cap":3},
      {"id":"mood","domain":"Health & Chronic","weight":1},
      {"id":"isolation","domain":"Geographic Isolation","weight":1}
    ],
    "decision_tree": [
      { "if": { "all": [ {"eq":["memory_changes","severe"]}, {"eq":["primary_support","none"]} ] }, "recommendation":"High-Acuity Memory Care", "tier":4 },
      { "if": { "eq":["memory_changes","severe"] }, "recommendation":"Memory Care", "tier":3 },
      { "if": { "all": [ {"len_gt":["badls",0]}, {"any":[ {"len_gt":["behaviors",0]}, {"eq":["falls","multiple"]} ] } ] }, "recommendation":"Memory Care", "tier":3 },
      { "if": { "all":[ {"eq":["falls","multiple"]}, {"eq":["primary_support","none"]} ] }, "recommendation":"Assisted Living", "tier":2 },
      { "if": { "lt":["score",8] },  "recommendation":"Independent / In-Home", "tier":0 },
      { "if": { "lt":["score",16] }, "recommendation":"Assisted Living", "tier":2 },
      { "if": { "lt":["score",24] }, "recommendation":"Memory Care", "tier":3 },
      { "if": { "gte":["score",24] }, "recommendation":"Skilled Nursing", "tier":4 }
    ],
    "modifiers": [
      { "if": { "all":[ {"eq":["hours_per_day","24h"]}, {"neq":["memory_changes","severe"]} ] }, "action":"decrease_tier","value":1 },
      { "if": { "all":[ {"eq":["isolation","very"]}, {"any":[ {"eq":["hours_per_day","lt1h"]}, {"eq":["primary_support","none"]} ] } ] }, "action":"increase_tier","value":1 }
    ],
    "flags": {
      "medication_risk": {
        "if": { "all": [ {"eq":["isolation","very"]}, {"in":["meds_complexity",["moderate","complex"]]} ] },
        "priority": "high",
        "message": "Living in a very isolated location with a complex or moderate medication routine increases the risk of medication mismanagement due to limited access to pharmacies or caregivers, requiring closer monitoring or facility-based care."
      },
      "cognition_risk_mild": {
        "if": { "all": [ {"eq":["memory_changes","occasional"]}, {"len_gt":["behaviors",0]} ] },
        "priority": "low",
        "message": "Occasional forgetfulness paired with behavioral concerns suggests early cognitive issues that may require minimal supervision, such as check-ins or in-home support, to prevent escalation."
      },
      "cognition_risk_moderate": {
        "if": { "all": [ {"eq":["memory_changes","moderate"]}, {"len_gt":["behaviors",0]} ] },
        "priority": "medium",
        "message": "Moderate memory or thinking issues with behavioral concerns indicate a need for structured supervision, possibly in an assisted living or memory care setting, to manage safety risks."
      },
      "cognition_risk_severe": {
        "if": { "eq":["memory_changes","severe"] },
        "priority": "high",
        "message": "Severe memory issues or a diagnosis like dementia/Alzheimer's inherently require significant supervision, likely in a memory care facility, due to high safety risks."
      },
      "fall_risk": {
        "if": { "all": [ {"eq":["falls","multiple"]}, {"in":["mobility",["wheelchair","bedbound"]]} ] },
        "priority": "high",
        "message": "Multiple falls in the past six months combined with limited mobility signals a high risk of future falls, necessitating safety interventions like mobility aids or a facility with fall prevention protocols."
      },
      "isolation_risk": {
        "if": { "all": [ {"eq":["isolation","very"]}, {"eq":["primary_support","none"]} ] },
        "priority": "high",
        "message": "A very isolated location with no regular support indicates a lack of immediate help for emergencies, increasing risks for health crises or neglect, potentially requiring relocation to a care facility."
      },
      "caregiver_burnout": {
        "if": { "all": [ {"any":[ {"len_gte":["badls",3]}, {"len_gte":["iadls",3]} ]}, {"eq":["hours_per_day","24h"]}, {"eq":["primary_support","family"]} ] },
        "priority": "high",
        "message": "Significant ADL/IADL needs with 24-hour support from family suggests an unsustainable caregiver burden, indicating a need for professional care or facility support to prevent burnout."
      },
      "health_management_risk": {
        "if": { "all": [ {"len_gte":["chronic_conditions",3]}, {"eq":["mood","low"]} ] },
        "priority": "medium",
        "message": "Multiple chronic conditions paired with a low mood may indicate challenges in managing health conditions due to emotional distress, increasing the risk of non-compliance or worsening health."
      },
      "safety_risk": {
        "if": { "all": [ {"any":[ {"includes":["badls","toileting"]}, {"includes":["badls","transferring"]} ]}, {"len_gt":["behaviors",0]} ] },
        "priority": "high",
        "message": "Needing help with critical ADLs like toileting or transferring combined with behavioral issues poses a safety risk, as cognitive issues may exacerbate physical limitations, necessitating a controlled environment."
      },
      "mobility_support_risk": {
        "if": { "all": [ {"in":["mobility",["wheelchair","bedbound"]]}, {"eq":["primary_support","none"]} ] },
        "priority": "high",
        "message": "Limited mobility with no regular support increases the risk of immobility-related complications, requiring immediate caregiver support or facility care."
      },
      "emotional_support_risk": {
        "if": { "all": [ {"eq":["mood","low"]}, {"any":[ {"eq":["isolation","very"]}, {"in":["primary_support",["none","family"]]} ]} ] },
        "priority": "medium",
        "message": "A low mood in a very isolated location or with limited formal support suggests a risk of worsening mental health, requiring interventions like counseling or community-based care."
      },
      "daily_living_risk": {
        "if": { "all": [ {"any":[ {"len_gte":["badls",2]}, {"len_gte":["iadls",2]} ]}, {"eq":["primary_support","none"]} ] },
        "priority": "medium",
        "message": "Significant ADL/IADL needs with no regular support risk unmet care requirements, potentially leading to neglect or health decline."
      },
      "medication_adherence_risk": {
        "if": { "all": [ {"in":["meds_complexity",["moderate","complex"]]}, {"includes":["iadls","med_mgmt"]} ] },
        "priority": "high",
        "message": "Complex medication needs with management issues risk medication errors, requiring caregiver support or a structured care setting."
      },
      "cognitive_safety_risk": {
        "if": { "all": [ {"in":["memory_changes",["moderate","severe"]]}, {"eq":["hours_per_day","lt1h"]} ] },
        "priority": "high",
        "message": "Moderate to severe cognitive issues with minimal support pose a safety risk due to insufficient supervision, likely requiring memory care."
      },
      "veteran_aanda_risk": {
        "if": { "any": [ {"len_gt":["badls",0]}, {"len_gt":["iadls",0]} ] },
        "priority": "medium",
        "message": "Any impairment in basic activities (BADLs) or instrumental activities (IADLs) may qualify for VA Aid & Attendance benefits, requiring further evaluation for eligibility."
      },
      "aging_risk": {
        "if": { "all": [ {"eq":["age_range","85_plus"]}, {"any":[ {"len_gte":["chronic_conditions",2]}, {"eq":["falls","multiple"]} ]} ] },
        "priority": "medium",
        "message": "Advanced age with multiple chronic conditions or falls increases vulnerability to health decline or injury, suggesting proactive care planning."
      }
    }
  }
}