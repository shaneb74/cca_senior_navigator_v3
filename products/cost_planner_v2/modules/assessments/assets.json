    "home_equity_estimate": "number",
    "real_estate_other": "number",
    "life_insurance_cash_value": "number",
    "primary_residence_mortgage": "number",
    "other_real_estate_debt": "number",
    "secured_loans": "number",
    "unsecured_debt": "number",
    "total_asset_value": "calculated",
    "total_asset_debt": "calculated",
    "net_asset_value": "calculated"
  }
}