{
  "key": "life_insurance",
  "title": "Life Insurance & Annuities",
  "icon": "üìú",
  "description": "Life insurance policies and annuity contracts",
  "estimated_time": "4-6 min",
  "required": false,
  "sort_order": 5,
  "sections": [
    {
      "id": "intro",
      "type": "intro",
      "title": "Life Insurance Assessment",
      "icon": "üìú",
      "help_text": "Let's review life insurance policies and annuities that might help fund care. These assets can provide cash value or income for care costs.",
      "fields": [],
      "info_boxes": [
        {
          "type": "info",
          "message": "üí° Many life insurance policies build cash value that can be accessed for care costs through loans, withdrawals, or accelerated death benefits."
        }
      ]
    },
    {
      "id": "life_insurance",
      "title": "Life Insurance Policies",
      "icon": "üìÑ",
      "help_text": "Term, whole, or universal life insurance",
      "layout": "single_column",
      "fields": [
        {
          "key": "has_life_insurance",
          "label": "Have Life Insurance?",
          "type": "select",
          "required": false,
          "options": [
            {"value": "no", "label": "No"},
            {"value": "yes", "label": "Yes"}
          ],
          "default": "no",
          "help": "Any type of life insurance policy"
        },
        {
          "key": "life_insurance_type",
          "label": "Policy Type",
          "type": "select",
          "required": false,
          "options": [
            {"value": "term", "label": "Term Life (no cash value)"},
            {"value": "whole", "label": "Whole Life"},
            {"value": "universal", "label": "Universal Life"},
            {"value": "variable", "label": "Variable Life"},
            {"value": "other", "label": "Other"}
          ],
          "default": "term",
          "help": "Type of life insurance policy",
          "visible_if": {
            "field": "has_life_insurance",
            "equals": "yes"
          }
        },
        {
          "key": "life_insurance_face_value",
          "label": "Death Benefit (Face Value)",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 10000000,
          "step": 10000,
          "default": 0,
          "help": "The death benefit amount",
          "visible_if": {
            "field": "has_life_insurance",
            "equals": "yes"
          }
        },
        {
          "key": "life_insurance_cash_value",
          "label": "Current Cash Value",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 5000000,
          "step": 5000,
          "default": 0,
          "help": "Cash value you could access (not applicable to term life)",
          "visible_if": {
            "field": "has_life_insurance",
            "equals": "yes"
          }
        },
        {
          "key": "life_insurance_monthly_premium",
          "label": "Monthly Premium",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 5000,
          "step": 50,
          "default": 0,
          "help": "Monthly premium payment",
          "visible_if": {
            "field": "has_life_insurance",
            "equals": "yes"
          }
        }
      ],
      "info_boxes": [
        {
          "type": "info",
          "message": "üí∞ Options for accessing life insurance: Policy loans (borrow against cash value), withdrawals, surrender (cancel policy), accelerated death benefit (if terminal illness), or life settlement (sell policy to third party)."
        }
      ]
    },
    {
      "id": "annuities",
      "title": "Annuities",
      "icon": "üìä",
      "help_text": "Fixed, variable, or indexed annuity contracts",
      "layout": "single_column",
      "fields": [
        {
          "key": "has_annuities",
          "label": "Have Annuities?",
          "type": "select",
          "required": false,
          "options": [
            {"value": "no", "label": "No"},
            {"value": "yes", "label": "Yes"}
          ],
          "default": "no",
          "help": "Any annuity contracts providing income or accumulation"
        },
        {
          "key": "annuity_current_value",
          "label": "Current Annuity Value",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 10000000,
          "step": 10000,
          "default": 0,
          "help": "Total value of annuity contracts",
          "visible_if": {
            "field": "has_annuities",
            "equals": "yes"
          }
        },
        {
          "key": "annuity_monthly_income",
          "label": "Monthly Annuity Income",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 50000,
          "step": 100,
          "default": 0,
          "help": "Monthly income from annuitized contracts",
          "visible_if": {
            "field": "has_annuities",
            "equals": "yes"
          }
        }
      ],
      "info_boxes": [
        {
          "type": "warning",
          "message": "‚ö†Ô∏è Surrendering annuities early may result in surrender charges (typically 5-10 years) and tax penalties if under age 59¬Ω."
        }
      ]
    },
    {
      "id": "results",
      "type": "results",
      "title": "Life Insurance Assessment Complete",
      "icon": "‚úÖ",
      "fields": []
    }
  ],
  "summary": {
    "type": "calculated",
    "label": "Total Life Insurance & Annuity Value",
    "formula": "sum(life_insurance_cash_value, annuity_current_value)",
    "display_format": "${:,.0f}"
  },
  "output_contract": {
    "has_life_insurance": "string",
    "life_insurance_type": "string",
    "life_insurance_face_value": "number",
    "life_insurance_cash_value": "number",
    "life_insurance_monthly_premium": "number",
    "has_annuities": "string",
    "annuity_current_value": "number",
    "annuity_monthly_income": "number",
    "total_life_annuity_value": "calculated"
  }
}
