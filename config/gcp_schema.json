{
  "version": "v3.2",
  "intro": {
    "title": "Find the Right Senior Care",
    "body": "These questions help us match you to senior living options based on needs like daily assistance, memory, safety, or location. First, we’ll check eligibility to ensure we can assist. It takes just a few minutes.",
    "cta": "Start"
  },
  "sections": [
    {
      "id": "ability_to_help",
      "title": "Ability for Us to Help",
      "questions": [
        {
          "id": "medicaid_status",
          "type": "single",
          "label": "Is the person currently on Medicaid?",
          "help": "Medicaid is different from Medicare. We can absolutely work with people on Medicare. If someone is on Medicaid or you're not sure, our advisors can't arrange placement because Medicaid has its own programs.",
          "style": "pill",
          "options": [
            {"label": "Yes", "value": "yes"},
            {"label": "No", "value": "no"},
            {"label": "Unsure", "value": "unsure"}
          ]
        },
        {
          "id": "medicaid_ack",
          "type": "ack",
          "label": "Please confirm:",
          "text": "Concierge Care Advisors can’t arrange placement for people on Medicaid. You can still complete the Guided Care Plan and use the Cost Planner. For Medicaid programs and support, visit Medicaid.gov.",
          "link": {"label": "Open Medicaid.gov", "href": "https://www.medicaid.gov/"},
          "depends_on": {"id": "medicaid_status", "any_of": ["yes", "unsure"]}
        }
      ]
    },
    {
      "id": "daily_life_support",
      "title": "Daily life & support",
      "questions": [
        {
          "id": "help_overall",
          "type": "single",
          "style": "pill",
          "label": "How much help does {{name}} need with daily activities overall?",
          "options": [
            "None – fully independent",
            "Occasional – some help with a few tasks",
            "Regular – needs daily assistance",
            "Extensive – needs full-time support"
          ],
          "domain": "adl_iadl"
        },
        {
          "id": "badls",
          "type": "multiselect",
          "label": "Which basic daily activities require help? (BADLs)",
          "options": [
            "Bathing/Showering",
            "Dressing",
            "Eating",
            "Toileting",
            "Transferring (e.g., bed to chair)",
            "Personal Hygiene",
            "Mobility"
          ],
          "when": {"ne": ["help_overall", "None – fully independent"]}
        },
        {
          "id": "iadls",
          "type": "multiselect",
          "label": "Which household or community tasks require help? (IADLs)",
          "options": [
            "Meal preparation",
            "Housekeeping",
            "Managing finances",
            "Medication management",
            "Transportation",
            "Shopping",
            "Communication"
          ],
          "when": {"ne": ["help_overall", "None – fully independent"]}
        },
        {
          "id": "hours_per_day",
          "type": "single",
          "style": "pill",
          "label": "How many hours per day of assistance does {{name}} typically receive?",
          "options": [
            "Less than 1 hour",
            "1–3 hours",
            "4–8 hours",
            "24-hour support"
          ]
        },
        {
          "id": "primary_support",
          "type": "single",
          "style": "pill",
          "label": "Who provides most of the support right now?",
          "options": [
            "Family/friends",
            "Paid caregiver",
            "Community or agency",
            "No regular support"
          ]
        }
      ]
    },
    {
      "id": "health_safety",
      "title": "Health & safety",
      "questions": [
        {
          "id": "memory_changes",
          "type": "single",
          "style": "pill",
          "label": "Cognitive health or memory changes:",
          "options": [
            "No concerns",
            "Occasional forgetfulness",
            "Moderate memory or thinking issues",
            "Severe memory issues or diagnosis (like dementia or Alzheimer’s)"
          ]
        },
        {
          "id": "behaviors",
          "type": "multiselect",
          "label": "Have there been any of these behaviors or concerns?",
          "options": [
            "Wandering",
            "Aggression",
            "Elopement / Exit-seeking",
            "Confusion or disorientation",
            "Sundowning",
            "Repetitive questioning",
            "Poor judgment",
            "Hoarding",
            "Sleep disturbances"
          ],
          "when": {"in": ["memory_changes", ["Moderate memory or thinking issues", "Severe memory issues or diagnosis (like dementia or Alzheimer’s)"]]}
        },
        {
          "id": "meds_complexity",
          "type": "single",
          "style": "pill",
          "label": "Medication profile:",
          "options": [
            "None",
            "Simple – a few meds, easy to manage",
            "Moderate – daily meds, some complexity",
            "Complex – many meds or caregiver-managed"
          ]
        },
        {
          "id": "mobility",
          "type": "single",
          "style": "pill",
          "label": "Mobility level:",
          "options": [
            "Walks independently",
            "Uses cane or walker",
            "Uses wheelchair or scooter",
            "Bed-bound or limited mobility"
          ]
        },
        {
          "id": "falls",
          "type": "single",
          "style": "pill",
          "label": "Fall history:",
          "options": [
            "No falls in past 6 months",
            "One fall",
            "Multiple falls"
          ]
        },
        {
          "id": "chronic_conditions",
          "type": "multiselect",
          "label": "Chronic conditions (select all that apply):",
          "options": [
            "Diabetes",
            "Congestive heart failure (CHF)",
            "COPD / Respiratory disease",
            "Hypertension",
            "Arthritis",
            "Stroke or neurological condition",
            "Parkinson’s disease",
            "Cancer",
            "Other"
          ]
        },
        {
          "id": "chronic_management",
          "type": "single",
          "style": "pill",
          "label": "How well are these conditions being managed overall?",
          "options": [
            "Very well",
            "Mostly managed",
            "Somewhat unstable",
            "Poorly managed"
          ],
          "when": {"count_gte": ["chronic_conditions", 2]}
        },
        {
          "id": "mood",
          "type": "single",
          "style": "pill",
          "label": "Overall, how would you describe {{name}}’s mood these days?",
          "options": [
            "Great – always positive",
            "Mostly good",
            "Okay – ups and downs",
            "Low – feeling down a lot"
          ],
          "effects": [
            {
              "when": {"eq": ["mood", "Low – feeling down a lot"]},
              "action": "flag",
              "flag": "emotional_followup",
              "message": "It might help to discuss emotional well-being with a professional to ensure the best care plan."
            }
          ]
        },
        {
          "id": "isolation",
          "type": "single",
          "style": "pill",
          "label": "Is {{name}}’s home located far from family, care providers, or essential services?",
          "options": [
            "No – easily accessible",
            "Somewhat isolated",
            "Very isolated"
          ]
        }
      ]
    }
  ]
}
