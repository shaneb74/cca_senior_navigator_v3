{
  "version": "v4",
  "intro": {
    "title": "Find the Right Senior Care",
    "body": "We'll match you to the best living options based on daily needs, safety, cognition, and more. Takes two minutes.",
    "cta": "Start"
  },
  "sections": [
    {
      "id": "about",
      "title": "About You",
      "questions": [
        {
          "key": "age_range",
          "type": "pills",
          "label": "What is this person's age range?",
          "options": ["Under 65", "65–74", "75–84", "85+"],
          "required": true
        },
        {
          "key": "living_situation",
          "type": "pills",
          "label": "Current living situation?",
          "options": ["Alone", "With family", "Assisted living", "Other"],
          "required": true
        },
        {
          "key": "isolation",
          "type": "pills",
          "label": "Is this person's home located far from family, care providers, or essential services?",
          "options": ["No – easily accessible", "Somewhat isolated", "Very isolated"],
          "required": true
        }
      ]
    },
    {
      "id": "care_needs",
      "title": "Medication & Mobility",
      "questions": [
        {
          "key": "meds_complexity",
          "type": "pills",
          "label": "How complex is this person's medication routine?",
          "options": ["None", "Simple – a few meds, easy to manage", "Moderate – daily meds, some complexity", "Complex – many meds or caregiver-managed"],
          "required": true
        },
        {
          "key": "mobility",
          "type": "pills",
          "label": "Mobility level?",
          "options": ["Walks independently", "Uses cane or walker", "Uses wheelchair or scooter", "Bed-bound or limited mobility"],
          "required": true
        },
        {
          "key": "falls",
          "type": "pills",
          "label": "Fall history?",
          "options": ["No falls in the past six months", "One fall", "Multiple falls"],
          "required": true
        },
        {
          "key": "chronic_conditions",
          "type": "multiselect",
          "label": "Chronic conditions (select all that apply):",
          "options": ["Diabetes", "Congestive heart failure (CHF)", "COPD / Respiratory disease", "Hypertension", "Arthritis", "Stroke or neurological condition", "Parkinson’s disease", "Cancer", "Other"],
          "required": false
        },
        {
          "key": "additional_conditions",
          "type": "pill_list",
          "label": "List any additional chronic conditions (type and press Add)",
          "required": false
        }
      ]
    },
    {
      "id": "daily_living",
      "title": "Daily Living",
      "questions": [
        {
          "key": "help_overall",
          "type": "pills",
          "label": "How much help does this person need with daily activities overall?",
          "options": ["None – fully independent", "Occasional – some help with a few tasks", "Regular – needs daily assistance", "Extensive – needs full-time support"],
          "required": true
        },
        {
          "key": "hours_per_day",
          "type": "pills",
          "label": "How many hours per day of assistance does this person typically receive?",
          "options": ["Less than 1 hour", "1–3 hours", "4–8 hours", "24-hour support"],
          "required": true
        },
        {
          "key": "primary_support",
          "type": "pills",
          "label": "Who provides most of the support right now?",
          "options": ["Family/friends", "Paid caregiver", "Community or agency", "No regular support"],
          "required": true
        }
      ]
    },
    {
      "id": "cognition_mental_health",
      "title": "Cognition & Mental Health",
      "questions": [
        {
          "key": "memory_changes",
          "type": "pills",
          "label": "Cognitive health or memory changes:",
          "options": ["No concerns", "Occasional forgetfulness", "Moderate memory or thinking issues", "Severe memory issues or diagnosis like dementia or Alzheimer's"],
          "required": true
        },
        {
          "key": "behaviors",
          "type": "multiselect",
          "label": "Have there been any of these behaviors or concerns?",
          "options": ["Wandering", "Aggression", "Elopement / Exit-seeking", "Confusion or disorientation", "Sundowning", "Repetitive questioning", "Poor judgment", "Hoarding", "Sleep disturbances"],
          "required": false,
          "when": {
            "in": ["memory_changes", ["Moderate memory or thinking issues", "Severe memory issues or diagnosis like dementia or Alzheimer's"]]
          }
        },
        {
          "key": "mood",
          "type": "pills",
          "label": "Overall, how would you describe this person's mood these days?",
          "options": ["Great – always positive", "Mostly good", "Okay – ups and downs", "Low – feeling down a lot"],
          "required": true,
          "effects": [
            {
              "when": {"eq": ["mood", "Low – feeling down a lot"]},
              "action": "flag",
              "flag": "emotional_followup",
              "message": "It might help to discuss emotional well-being with a professional to ensure the best care plan."
            }
          ]
        }
      ]
    },
    {
      "id": "results",
      "title": "Your Guided Care Plan Summary",
      "summary": {
        "bullets": ["Independence snapshot", "Safety or cognitive notes", "Medication complexity or chronic conditions", "Emotional well-being (if flagged)", "Caregiver load (hours/day)", "Location-based service availability"],
        "ctas": ["Continue to Cost Planner", "Return to Care Hub", "Talk to an Advisor"]
      }
    }
  ]
}