{
  "version": "v3.2",
  "intro": {
    "title": "Find the Right Senior Care",
    "body": "These questions help us match you to senior living options based on needs like daily assistance, memory, safety, or location. First, we’ll check eligibility to ensure we can assist. It takes just a few minutes.",
    "cta": "Start"
  },
  "sections": [
    {
      "id": "eligibility",
      "title": "Eligibility",
      "questions": [
        {
          "key": "medicaid_status",
          "type": "pills",
          "label": "Are you currently on Medicaid (state long-term care assistance, not Medicare)?",
          "options": ["Yes", "No"],
          "required": true,
          "domain": "eligibility",
          "effects": [
            {
              "when": {"eq": ["medicaid_status", "Yes"]},
              "action": "exit",
              "message": "Medicaid covers long-term care, unlike Medicare which covers medical services. Unfortunately, our service cannot assist with Medicaid-based care. Contact your state Medicaid office for options."
            }
          ]
        }
      ]
    },
    {
      "id": "daily_support",
      "title": "Daily Life & Support",
      "questions": [
        {
          "key": "help_overall",
          "type": "pills",
          "label": "How much help does {{name}} need with daily activities overall?",
          "options": ["None – fully independent", "Occasional – some help with a few tasks", "Regular – needs daily assistance", "Extensive – needs full-time support"],
          "required": true,
          "domain": "adl_iadl"
        },
        {
          "key": "badls",
          "type": "multiselect",
          "label": "Which basic daily activities require help? (BADLs)",
          "options": ["Bathing/Showering", "Dressing", "Eating", "Toileting", "Transferring (e.g., bed to chair)", "Personal Hygiene", "Mobility"],
          "required": false,
          "domain": "adl_iadl",
          "when": {"ne": ["help_overall", "None – fully independent"]}
        },
        {
          "key": "iadls",
          "type": "multiselect",
          "label": "Which household or community tasks require help? (IADLs)",
          "options": ["Meal preparation", "Housekeeping", "Managing finances", "Medication management", "Transportation", "Shopping", "Communication"],
          "required": false,
          "domain": "adl_iadl",
          "when": {"ne": ["help_overall", "None – fully independent"]}
        },
        {
          "key": "hours_per_day",
          "type": "pills",
          "label": "How many hours per day of assistance does {{name}} typically receive?",
          "options": ["Less than 1 hour", "1–3 hours", "4–8 hours", "24-hour support"],
          "required": true,
          "domain": "support_network"
        },
        {
          "key": "primary_support",
          "type": "pills",
          "label": "Who provides most of the support right now?",
          "options": ["Family/friends", "Paid caregiver", "Community or agency", "No regular support"],
          "required": true,
          "domain": "support_network"
        }
      ]
    },
    {
      "id": "health_safety",
      "title": "Health & Safety",
      "questions": [
        {
          "key": "memory_changes",
          "type": "pills",
          "label": "Cognitive health or memory changes:",
          "options": ["No concerns", "Occasional forgetfulness", "Moderate memory or thinking issues", "Severe memory issues or diagnosis (like dementia or Alzheimer’s)"],
          "required": true,
          "domain": "cognitive"
        },
        {
          "key": "behaviors",
          "type": "multiselect",
          "label": "Have there been any of these behaviors or concerns?",
          "options": ["Wandering", "Aggression", "Elopement / Exit-seeking", "Confusion or disorientation", "Sundowning", "Repetitive questioning", "Poor judgment", "Hoarding", "Sleep disturbances"],
          "required": false,
          "domain": "cognitive",
          "when": {"in": ["memory_changes", ["Moderate memory or thinking issues", "Severe memory issues or diagnosis (like dementia or Alzheimer’s)"]]}
        },
        {
          "key": "meds_complexity",
          "type": "pills",
          "label": "Medication profile:",
          "options": ["None", "Simple – a few meds, easy to manage", "Moderate – daily meds, some complexity", "Complex – many meds or caregiver-managed"],
          "required": true,
          "domain": "medication"
        },
        {
          "key": "mobility",
          "type": "pills",
          "label": "Mobility level:",
          "options": ["Walks independently", "Uses cane or walker", "Uses wheelchair or scooter", "Bed-bound or limited mobility"],
          "required": true,
          "domain": "mobility_falls"
        },
        {
          "key": "falls",
          "type": "pills",
          "label": "Fall history:",
          "options": ["No falls in past 6 months", "One fall", "Multiple falls"],
          "required": true,
          "domain": "mobility_falls"
        },
        {
          "key": "chronic_conditions",
          "type": "multiselect",
          "label": "Chronic conditions (select all that apply):",
          "options": ["Diabetes", "Congestive heart failure (CHF)", "COPD / Respiratory disease", "Hypertension", "Arthritis", "Stroke or neurological condition", "Parkinson’s disease", "Cancer", "Other"],
          "required": false,
          "domain": "chronic"
        },
        {
          "key": "chronic_management",
          "type": "pills",
          "label": "How well are these conditions being managed overall?",
          "options": ["Very well", "Mostly managed", "Somewhat unstable", "Poorly managed"],
          "required": false,
          "domain": "chronic",
          "when": {"count_gte": ["chronic_conditions", 2]}
        },
        {
          "key": "mood",
          "type": "pills",
          "label": "Overall, how would you describe {{name}}’s mood these days?",
          "options": ["Great – always positive", "Mostly good", "Okay – ups and downs", "Low – feeling down a lot"],
          "required": true,
          "domain": "emotional",
          "effects": [
            {
              "when": {"eq": ["mood", "Low – feeling down a lot"]},
              "action": "flag",
              "flag": "emotional_followup",
              "message": "It might help to discuss emotional well-being with a professional to ensure the best care plan."
            }
          ]
        },
        {
          "key": "isolation",
          "type": "pills",
          "label": "Is {{name}}’s home located far from family, care providers, or essential services?",
          "options": ["No – easily accessible", "Somewhat isolated", "Very isolated"],
          "required": true,
          "domain": "isolation"
        }
      ]
    },
    {
      "id": "results",
      "title": "Your Guided Care Plan Summary",
      "summary": {
        "bullets": ["Independence snapshot", "Safety or cognitive notes", "Medication complexity or chronic conditions", "Emotional well-being (if flagged)", "Caregiver load (hours/day)", "Location-based service availability"],
        "ctas": ["Continue to Cost Planner", "Return to Care Hub", "Talk to an Advisor"]
      }
    }
  ]
}
