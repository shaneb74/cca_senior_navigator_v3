{
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.analysis.extraPaths": ["${workspaceFolder}"],
  "python.terminal.activateEnvironment": true,
  "files.watcherExclude": {
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/_archive*/**": true,
    "**/archive/**": true,
    "**/static/images/**": true,
    "**/docs/legacy/**": true,
    "**/.streamlit/cache/**": true
  },
  "search.exclude": {
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/_archive*/**": true,
    "**/archive/**": true,
    "**/static/images/**": true,
    "**/docs/legacy/**": true,
    "**/.streamlit/cache/**": true
  }
}
