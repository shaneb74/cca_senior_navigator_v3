# OpenAI API Configuration
# Copy this file to .env and replace with your own keys

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-REPLACE_WITH_YOUR_OWN

# OpenAI Model (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# LLM Navi Feature Flag (off|shadow|assist|adjust)
FEATURE_LLM_NAVI=shadow

# LLM GCP Feature Flag (off|shadow|assist)
FEATURE_LLM_GCP=off

# FAQ Audio Feature (off|on)
FEATURE_FAQ_AUDIO=off

# ElevenLabs API Configuration (for FAQ audio)
ELEVENLABS_API_KEY=your_api_key_here
ELEVENLABS_VOICE_ID=your_cloned_voice_id_here
AUDIO_PLAYBACK_SPEED=0.95     # 0.5-2.0: Playback speed (0.95 = slightly slower)
AUDIO_STABILITY=0.5           # 0.0-1.0: Lower = more expressive, Higher = more consistent
AUDIO_SIMILARITY=0.93         # 0.0-1.0: Higher = closer to cloned voice (0.85-0.95 recommended)
AUDIO_STYLE=0.15              # 0.0-1.0: Style exaggeration (0.1-0.2 adds natural variation)
