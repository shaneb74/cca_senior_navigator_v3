#!/usr/bin/env bash
set -euo pipefail

req=(
  "config/gcp_schema.json"
  "config/gcp_scoring.json"
  "config/gcp_blurbs.json"
  "static/images/hero.png"
  "static/images/welcome_self.png"
  "static/images/welcome_someone_else.png"
  "static/images/contextual_self.png"
  "static/images/contextual_someone_else.png"
)
for f in "${req[@]}"; do
  if [[ ! -f "$f" ]]; then
    echo "[pre-commit] Missing required file: $f" >&2
    exit 1
  fi
done
